<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SebastianCruzApuntesMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Views="clr-namespace:SebastianCruzApuntesMaui.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SebastianCruzApuntesMaui">

    <TabBar>
        <ShellContent
            Title="AllNotes"
             ContentTemplate="{DataTemplate Views:AllNoteSC}"
            Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate Views:AboutPageSC}"
            Icon="{OnPlatform 'icon_about.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}" />
    </TabBar>

</Shell>
